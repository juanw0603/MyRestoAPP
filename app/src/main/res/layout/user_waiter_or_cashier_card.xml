<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvwaiterOrCashierName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvwaiterOrCashierEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="example@gmail.com"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tvwaiterOrCashierName"
        app:layout_constraintTop_toBottomOf="@+id/tvwaiterOrCashierName" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="kasir/waiter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvwaiterOrCashierName"
        app:layout_constraintTop_toBottomOf="@+id/tvwaiterOrCashierEmail" />

    <Button
        android:id="@+id/btn_editUserWaiterOrCashier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:backgroundTint="#03A9F4"
        android:text="edit"
        app:layout_constraintStart_toEndOf="@+id/tvwaiterOrCashierEmail"
        tools:layout_editor_absoluteY="43dp" />

    <Button
        android:id="@+id/btn_deleteWaiterOrCashier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#03A9F4"
        android:text="delete"
        app:layout_constraintBottom_toBottomOf="@+id/btn_editUserWaiterOrCashier"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_editUserWaiterOrCashier"
        app:layout_constraintTop_toTopOf="@+id/btn_editUserWaiterOrCashier" />
</androidx.constraintlayout.widget.ConstraintLayout>