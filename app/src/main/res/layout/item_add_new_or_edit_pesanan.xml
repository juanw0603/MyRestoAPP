<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="5dp">

    <TextView
        android:id="@+id/tv_namaItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton_addQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_namaItem"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_namaItem"
        app:srcCompat="@drawable/baseline_add_24" />

    <TextView
        android:id="@+id/tv_quantity"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:text="10"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/tv_namaItem"
        app:layout_constraintEnd_toStartOf="@+id/imageButton_addQuantity"
        app:layout_constraintTop_toTopOf="@+id/tv_namaItem" />

    <ImageButton
        android:id="@+id/imageButton_subtractQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_namaItem"
        app:layout_constraintEnd_toStartOf="@+id/tv_quantity"
        app:layout_constraintTop_toTopOf="@+id/tv_namaItem"
        app:srcCompat="@drawable/baseline_remove_24" />
</androidx.constraintlayout.widget.ConstraintLayout>